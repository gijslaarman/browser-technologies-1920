<div class="showcase">
    {{#each images}}
    <div id="img-{{@index}}"></div>
    {{/each}}
    <style>
        {{#each images}}
        #img-{{@index}}:target ~ .wrapper {
            transform: translate(calc({{@index}} * -100vw),0);
        }

        #img-{{@index}}:target ~ .dots .dot[data-label=img-{{@index}}] {
            opacity: 1;
        }
        {{/each}}
    </style>

    <div class="wrapper">
        {{#each images}}
        <figure>
            {{#if previous}}
            <noscript>
                <a class="nav previous" href="#img-{{previous}}"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M400 480H48c-26.51 0-48-21.49-48-48V80c0-26.51 21.49-48 48-48h352c26.51 0 48 21.49 48 48v352c0 26.51-21.49 48-48 48zM118.059 272.971l135.515 135.515c9.373 9.373 24.569 9.373 33.941 0l16.971-16.971c9.373-9.373 9.373-24.569 0-33.941L202.912 256l101.574-101.573c9.373-9.373 9.373-24.569 0-33.941l-16.971-16.971c-9.373-9.373-24.569-9.373-33.941 0L118.059 239.029c-9.373 9.373-9.373 24.569 0 33.942z"/></svg></a>
            </noscript>
            {{/if}}

            <img src="{{src}}" alt="{{alt}}">

            {{#if next}}
            <noscript>
                <a class="nav next" href="#img-{{next}}"><svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M48 32h352c26.51 0 48 21.49 48 48v352c0 26.51-21.49 48-48 48H48c-26.51 0-48-21.49-48-48V80c0-26.51 21.49-48 48-48zm281.941 207.029L194.427 103.515c-9.373-9.373-24.569-9.373-33.941 0l-16.971 16.971c-9.373 9.373-9.373 24.569 0 33.941L245.088 256 143.515 357.573c-9.373 9.373-9.373 24.569 0 33.941l16.971 16.971c9.373 9.373 24.569 9.373 33.941 0L329.942 272.97c9.372-9.372 9.372-24.568-.001-33.941z"/></svg></a>
            </noscript>
            {{/if}}
        </figure>
        {{/each}}

    </div>
    <div class="dots">
        {{#each images}}
        <a href="#img-{{@index}}" data-label="img-{{@index}}" class="dot"></a>
        {{/each}}
    </div>
</div>

<script src="showcase.js"></script>
